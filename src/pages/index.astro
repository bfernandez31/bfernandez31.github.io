---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/ui/Button.astro";
---

<BaseLayout title="Portfolio">
  <main>
    <div class="hero-image">
      <img
        src={`${import.meta.env.BASE_URL}assets/sample-image.svg`}
        alt="Portfolio hero image - abstract geometric design"
        width="800"
        height="600"
        loading="eager"
      />
    </div>

    <h1>Welcome to Portfolio</h1>
    <p>Built with Bun and Astro</p>

    <div class="button-group">
      <Button variant="primary" size="medium">Get Started</Button>
      <Button variant="outline" size="medium" href="/portfolio/about/">Learn More</Button>
    </div>
  </main>
</BaseLayout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero-image {
    margin-bottom: 2rem;
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .button-group {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .button-group {
      flex-direction: column;
      align-items: flex-start;
    }

    h1 {
      font-size: 2rem;
    }
  }
</style>
