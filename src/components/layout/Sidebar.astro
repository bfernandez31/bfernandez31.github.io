---
/**
 * Sidebar Component
 * Feature: PBF-32-portofolio-with-tui
 *
 * NvimTree-style file explorer sidebar
 */

import FileEntry from '../ui/FileEntry.astro';
import type { FileEntry as FileEntryType, SectionId } from '../../types/tui';

interface Props {
  /** Array of file entries */
  files: FileEntryType[];
  /** Currently active section ID */
  activeSectionId?: SectionId;
  /** Additional CSS class */
  class?: string;
}

const { files, activeSectionId = 'hero', class: className } = Astro.props;
---

<aside
  id="tui-sidebar"
  class:list={["tui-sidebar", className]}
  aria-label="File explorer"
>
  <div class="tui-sidebar__header">
    <span class="tui-sidebar__icon" aria-hidden="true">ó°‰‹</span>
    <span>EXPLORER</span>
  </div>

  <nav class="tui-sidebar__files" aria-label="Section files">
    <ul role="list">
      {files.map((file) => (
        <li>
          <FileEntry
            sectionId={file.sectionId}
            fileName={file.fileName}
            icon={file.icon}
            isActive={file.sectionId === activeSectionId}
          />
        </li>
      ))}
    </ul>
  </nav>

  <div class="tui-sidebar__footer">
    <span class="tui-sidebar__stats">{files.length} files</span>
  </div>
</aside>

<style>
  .tui-sidebar {
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    background-color: var(--color-surface-0, #1e1e2e);
    border-right: 1px solid var(--color-surface-1, #313244);
    font-family: var(--font-mono, monospace);
  }

  .tui-sidebar__header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    color: var(--color-text-muted, #6c7086);
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 700;
    border-bottom: 1px solid var(--color-surface-1, #313244);
  }

  .tui-sidebar__icon {
    font-family: var(--font-nerd, monospace);
    color: var(--color-warning, #f9e2af);
  }

  .tui-sidebar__files {
    flex: 1;
    padding: 0.5rem 0;
  }

  .tui-sidebar__files ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .tui-sidebar__files li {
    margin: 0;
  }

  .tui-sidebar__footer {
    padding: 0.5rem 0.75rem;
    border-top: 1px solid var(--color-surface-1, #313244);
    color: var(--color-text-muted, #6c7086);
    font-size: 0.75rem;
  }

  .tui-sidebar__stats {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  /* Mobile overlay mode */
  @media (max-width: 767px) {
    .tui-sidebar {
      position: fixed;
      top: 2rem;
      left: 0;
      bottom: 3rem;
      width: 80vw;
      max-width: 300px;
      z-index: 200;
      box-shadow: 4px 0 16px rgba(0, 0, 0, 0.4);
      transform: translateX(-100%);
      transition: transform 0.3s ease;
    }

    .tui-sidebar.is-open {
      transform: translateX(0);
    }
  }

  /* Tablet collapsible mode */
  @media (min-width: 768px) and (max-width: 1023px) {
    .tui-sidebar {
      position: fixed;
      top: 2rem;
      left: 0;
      bottom: 3rem;
      width: 250px;
      z-index: 200;
      box-shadow: 4px 0 16px rgba(0, 0, 0, 0.4);
      transform: translateX(-100%);
      transition: transform 0.3s ease;
    }

    .tui-sidebar.is-open {
      transform: translateX(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .tui-sidebar {
      transition: none;
    }
  }
</style>
