---
/**
 * Experience Section Component
 *
 * Displays professional experience timeline with chronological entries.
 * Features vertical timeline with alternating layout on desktop and stacked on mobile.
 * @feature PBF-21-experience-pro
 */
import experienceData from "../../data/experiences.json";
import type { Experience, ExperienceData } from "../../types/experience";

// Cast the JSON data to the correct type and sort by displayOrder (1 = most recent)
const experiences = (experienceData as ExperienceData).experiences.sort(
	(a, b) => a.displayOrder - b.displayOrder,
);

/**
 * Format date range for display
 */
function formatDateRange(startDate: string, endDate: string | null): string {
	const end = endDate ?? "Présent";
	return `${startDate} - ${end}`;
}
---

<section class="experience" role="region" aria-label="Professional Experience">
	<div class="experience__container">
		<h2 class="experience__title">Expériences</h2>
		<p class="experience__subtitle">Extrait d'expériences professionnelles</p>

		<ol class="experience__timeline" aria-label="Career timeline">
			{
				experiences.map((exp, index) => (
					<li class="experience__entry" data-entry-index={index}>
						<article class="experience__card">
							<header class="experience__header">
								<h3 class="experience__role">{exp.role}</h3>
								<span class="experience__company">{exp.company}</span>
								<div class="experience__meta">
									<time
										class="experience__date"
										datetime={exp.startDate}
									>
										{formatDateRange(exp.startDate, exp.endDate)}
									</time>
									<span class="experience__location">{exp.location}</span>
								</div>
							</header>
							<p class="experience__description">{exp.description}</p>
							{exp.achievements.length > 0 && (
								<ul class="experience__achievements" aria-label="Key achievements">
									{exp.achievements.map((achievement) => (
										<li class="experience__achievement">{achievement}</li>
									))}
								</ul>
							)}
							<ul class="experience__technologies" aria-label="Technologies used">
								{exp.technologies.map((tech) => (
									<li class="experience__tech-tag">{tech}</li>
								))}
							</ul>
						</article>
					</li>
				))
			}
		</ol>
	</div>
</section>

<script>
	import { gsap } from "gsap";
	import { ScrollTrigger } from "gsap/ScrollTrigger";

	gsap.registerPlugin(ScrollTrigger);

	// Check for reduced motion preference
	const prefersReducedMotion = window.matchMedia(
		"(prefers-reduced-motion: reduce)"
	).matches;

	if (!prefersReducedMotion) {
		// Animate experience entries on scroll
		const entries = document.querySelectorAll(".experience__entry");

		entries.forEach((entry, index) => {
			gsap.fromTo(
				entry,
				{
					opacity: 0,
					y: 30,
				},
				{
					opacity: 1,
					y: 0,
					duration: 0.6,
					ease: "power2.out",
					delay: index * 0.1,
					scrollTrigger: {
						trigger: entry,
						start: "top 80%",
						toggleActions: "play none none none",
					},
				}
			);
		});
	}

	// Clean up on page navigation
	document.addEventListener("astro:before-swap", () => {
		ScrollTrigger.getAll().forEach((trigger) => trigger.kill());
	});
</script>

<style>
	.experience {
		padding: 4rem 2rem;
		min-height: 100vh;
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.experience__container {
		max-width: 1200px;
		width: 100%;
		margin: 0 auto;
	}

	.experience__title {
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		font-weight: 700;
		text-align: center;
		margin-bottom: 1rem;
		color: var(--color-text);
	}

	.experience__subtitle {
		font-size: clamp(1rem, 2vw, 1.25rem);
		text-align: center;
		margin-bottom: 4rem;
		color: var(--color-text);
		opacity: 0.8;
	}

	/* Timeline container */
	.experience__timeline {
		position: relative;
		list-style: none;
		padding: 0;
		margin: 0;
	}

	/* Timeline vertical line */
	.experience__timeline::before {
		content: "";
		position: absolute;
		left: 50%;
		top: 0;
		bottom: 0;
		width: 2px;
		background: linear-gradient(
			180deg,
			var(--color-primary) 0%,
			var(--color-accent) 50%,
			var(--color-secondary) 100%
		);
		transform: translateX(-50%);
	}

	/* Timeline entry */
	.experience__entry {
		position: relative;
		width: 50%;
		padding: 0 2rem 3rem;
	}

	/* Timeline dot */
	.experience__entry::before {
		content: "";
		position: absolute;
		top: 0;
		width: 16px;
		height: 16px;
		background: var(--color-background);
		border: 3px solid var(--color-primary);
		border-radius: 50%;
		z-index: 1;
	}

	/* Alternating layout - odd entries (left side) */
	.experience__entry:nth-child(odd) {
		margin-left: 0;
		text-align: right;
		padding-right: 3rem;
		padding-left: 0;
	}

	.experience__entry:nth-child(odd)::before {
		right: -8px;
	}

	/* Even entries (right side) */
	.experience__entry:nth-child(even) {
		margin-left: 50%;
		text-align: left;
		padding-left: 3rem;
		padding-right: 0;
	}

	.experience__entry:nth-child(even)::before {
		left: -8px;
	}

	/* Experience card */
	.experience__card {
		background: rgba(30, 30, 46, 0.95);
		border: 1px solid rgba(203, 166, 247, 0.3);
		border-radius: 12px;
		padding: 1.5rem;
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		transition: transform var(--transition-color), box-shadow var(--transition-color);
	}

	@media (hover: hover) {
		.experience__card:hover {
			transform: translateY(-4px);
			box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
		}
	}

	.experience__header {
		margin-bottom: 1rem;
	}

	.experience__role {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--color-primary);
		margin-bottom: 0.25rem;
	}

	.experience__company {
		display: block;
		font-size: 1.125rem;
		font-weight: 500;
		color: var(--color-text);
		margin-bottom: 0.5rem;
	}

	.experience__meta {
		display: flex;
		gap: 1rem;
		font-size: 0.875rem;
		color: var(--color-text);
		opacity: 0.7;
	}

	/* Align meta for alternating layout */
	.experience__entry:nth-child(odd) .experience__meta {
		justify-content: flex-end;
	}

	.experience__entry:nth-child(even) .experience__meta {
		justify-content: flex-start;
	}

	.experience__date {
		font-family: "Fira Code", "Courier New", monospace;
	}

	.experience__location::before {
		content: "| ";
	}

	.experience__description {
		font-size: 1rem;
		line-height: 1.6;
		color: var(--color-text);
		margin-bottom: 1rem;
	}

	/* Achievements list */
	.experience__achievements {
		list-style: none;
		padding: 0;
		margin: 0 0 1rem;
	}

	.experience__achievement {
		font-size: 0.875rem;
		color: var(--color-accent);
		padding: 0.25rem 0;
		position: relative;
	}

	.experience__entry:nth-child(odd) .experience__achievement::before {
		content: "";
		display: none;
	}

	.experience__entry:nth-child(odd) .experience__achievement::after {
		content: "\2713";
		margin-left: 0.5rem;
		color: var(--color-secondary);
	}

	.experience__entry:nth-child(even) .experience__achievement::before {
		content: "\2713";
		margin-right: 0.5rem;
		color: var(--color-secondary);
	}

	/* Technology tags */
	.experience__technologies {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		list-style: none;
		padding: 0;
		margin: 0;
	}

	/* Align tags for alternating layout */
	.experience__entry:nth-child(odd) .experience__technologies {
		justify-content: flex-end;
	}

	.experience__entry:nth-child(even) .experience__technologies {
		justify-content: flex-start;
	}

	.experience__tech-tag {
		display: inline-block;
		font-size: 0.75rem;
		font-weight: 500;
		padding: 0.25rem 0.75rem;
		background: rgba(203, 166, 247, 0.15);
		border: 1px solid rgba(203, 166, 247, 0.3);
		border-radius: 9999px;
		color: var(--color-primary);
		transition: background var(--transition-color), border-color var(--transition-color);
	}

	.experience__tech-tag:hover,
	.experience__tech-tag:focus {
		background: rgba(203, 166, 247, 0.25);
		border-color: var(--color-primary);
	}

	/* Focus styles for accessibility */
	.experience__card:focus-within {
		outline: 2px solid var(--color-primary);
		outline-offset: 4px;
	}

	.experience__tech-tag:focus-visible {
		outline: 2px solid var(--color-primary);
		outline-offset: 2px;
	}

	/* Tablet layout (768px - 1023px) */
	@media (max-width: 1023px) {
		.experience__timeline::before {
			left: 20px;
		}

		.experience__entry {
			width: 100%;
			padding-left: 50px !important;
			padding-right: 0 !important;
			margin-left: 0 !important;
			text-align: left !important;
		}

		.experience__entry::before {
			left: 12px !important;
			right: auto !important;
		}

		.experience__meta,
		.experience__technologies {
			justify-content: flex-start !important;
		}

		.experience__achievement::before {
			content: "\2713" !important;
			margin-right: 0.5rem !important;
			color: var(--color-secondary);
			display: inline !important;
		}

		.experience__achievement::after {
			display: none !important;
		}
	}

	/* Mobile layout (<768px) */
	@media (max-width: 767px) {
		.experience {
			padding: 2rem 1rem;
		}

		.experience__timeline::before {
			left: 10px;
		}

		.experience__entry {
			padding-left: 35px !important;
			padding-bottom: 2rem;
		}

		.experience__entry::before {
			left: 2px !important;
			width: 14px;
			height: 14px;
		}

		.experience__card {
			padding: 1rem;
		}

		.experience__role {
			font-size: 1.125rem;
		}

		.experience__company {
			font-size: 1rem;
		}

		.experience__meta {
			flex-direction: column;
			gap: 0.25rem;
		}

		.experience__location::before {
			display: none;
		}
	}

	/* Accessibility - reduced motion */
	@media (prefers-reduced-motion: reduce) {
		.experience__entry {
			opacity: 1;
			transform: none;
		}

		.experience__card,
		.experience__tech-tag {
			transition: none;
		}
	}
</style>
