---
/**
 * Hero Section Component
 * Feature: PBF-30-hero-section
 *
 * Simple, name-first hero layout following awwwards portfolio conventions.
 * CSS-only animation with full accessibility support.
 */

interface Props {
	/** Developer's full name - displayed as h1 */
	name: string;
	/** Professional role/title - displayed as subtitle */
	role?: string;
	/** Optional tagline or brief description */
	tagline?: string;
	/** CTA button text */
	ctaText?: string;
	/** CTA button link (hash anchor or URL) */
	ctaLink?: string;
}

const {
	name,
	role,
	tagline,
	ctaText = "Explore Projects",
	ctaLink = "#projects",
} = Astro.props;
---

<section id="hero" class="hero" role="banner" aria-label="Introduction">
	<div class="hero__content hero__content--animate">
		<h1 class="hero__name">{name}</h1>
		{role && <p class="hero__role">{role}</p>}
		{tagline && <p class="hero__tagline">{tagline}</p>}
		<a href={ctaLink} class="hero__cta">{ctaText}</a>
	</div>
</section>

<style>
	/* ==========================================================================
	   HERO SECTION BASE
	   ========================================================================== */

	.hero {
		/* Layout */
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 100vh;
		min-height: 100dvh; /* Dynamic viewport height for mobile */

		/* Background - simple gradient */
		background: linear-gradient(
			135deg,
			var(--color-background) 0%,
			var(--color-surface-0) 100%
		);

		/* Spacing */
		padding: var(--space-xl, 2rem) var(--space-md, 1rem);

		/* Position context */
		position: relative;
		overflow: hidden;
	}

	/* ==========================================================================
	   HERO CONTENT CONTAINER
	   ========================================================================== */

	.hero__content {
		/* Layout */
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;

		/* Sizing */
		max-width: 1200px;
		width: 100%;
	}

	/* Animation initial state */
	.hero__content--animate {
		opacity: 0;
		transform: translateY(20px);
		animation: heroFadeIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.1s forwards;
	}

	@keyframes heroFadeIn {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* ==========================================================================
	   HERO NAME (H1 - Primary)
	   ========================================================================== */

	.hero__name {
		/* Typography - responsive with clamp() */
		font-size: clamp(3rem, 10vw, 8rem);
		font-weight: 700;
		line-height: 1.1;
		letter-spacing: -0.02em;

		/* Color */
		color: var(--color-text);

		/* Spacing */
		margin: 0;
		margin-bottom: clamp(1rem, 2.5vw, 2rem);
	}

	/* ==========================================================================
	   HERO ROLE (Subtitle)
	   ========================================================================== */

	.hero__role {
		/* Typography - responsive with clamp() */
		font-size: clamp(1.25rem, 3vw, 2rem);
		font-weight: 400;
		line-height: 1.4;

		/* Color - slightly muted */
		color: var(--color-text-muted);

		/* Spacing */
		margin: 0;
		margin-bottom: clamp(0.5rem, 1.5vw, 1rem);

		/* Constrain width for readability */
		max-width: 600px;
	}

	/* ==========================================================================
	   HERO TAGLINE (Optional)
	   ========================================================================== */

	.hero__tagline {
		/* Typography */
		font-size: clamp(1rem, 2vw, 1.25rem);
		font-weight: 400;

		/* Color - more muted */
		color: var(--color-text-muted);
		opacity: 0.8;

		/* Spacing */
		margin: 0;
		margin-bottom: clamp(2rem, 4vw, 3rem);

		/* Constrain width */
		max-width: 500px;
	}

	/* ==========================================================================
	   HERO CTA BUTTON
	   ========================================================================== */

	.hero__cta {
		/* Layout */
		display: inline-flex;
		align-items: center;
		justify-content: center;

		/* Sizing - 48px minimum for touch targets */
		min-height: 48px;
		padding: var(--space-sm, 0.75rem) var(--space-lg, 1.5rem);

		/* Typography */
		font-size: 1rem;
		font-weight: 500;
		text-decoration: none;

		/* Colors */
		background-color: var(--color-primary);
		color: var(--color-background);

		/* Border */
		border: 2px solid var(--color-primary);
		border-radius: 8px;

		/* Spacing */
		margin-top: clamp(2rem, 4vw, 3rem);

		/* Transitions */
		transition:
			background-color var(--transition-color, 0.2s ease),
			color var(--transition-color, 0.2s ease),
			border-color var(--transition-color, 0.2s ease),
			transform 0.2s ease;

		/* Cursor */
		cursor: pointer;
	}

	/* Hover state */
	.hero__cta:hover {
		background-color: transparent;
		color: var(--color-primary);
	}

	/* Focus state (keyboard accessibility) */
	.hero__cta:focus-visible {
		outline: 2px solid var(--color-primary);
		outline-offset: 4px;
	}

	/* Active state */
	.hero__cta:active {
		transform: scale(0.98);
	}

	/* ==========================================================================
	   REDUCED MOTION SUPPORT (Accessibility)
	   ========================================================================== */

	@media (prefers-reduced-motion: reduce) {
		.hero__content--animate {
			/* Show content immediately without animation */
			opacity: 1;
			transform: none;
			animation: none;
		}

		.hero__cta {
			transition: none;
		}
	}

	/* ==========================================================================
	   RESPONSIVE ADJUSTMENTS
	   ========================================================================== */

	/* Tablet and up */
	@media (min-width: 768px) {
		.hero {
			padding: var(--space-2xl, 3rem) var(--space-xl, 2rem);
		}
	}

	/* Very large screens */
	@media (min-width: 2560px) {
		.hero__content {
			max-width: 1400px;
		}
	}
</style>
