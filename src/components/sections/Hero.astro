---
export interface Props {
	headline: string;
	subheadline?: string;
	ctaText?: string;
	ctaLink?: string;
}

const { headline, subheadline, ctaText, ctaLink } = Astro.props;
---

<section class="hero">
	<div class="hero__content">
		<h1 class="hero__headline" data-split-text="char">{headline}</h1>
		{subheadline && <p class="hero__subheadline" data-split-text="word">{subheadline}</p>}
		{
			ctaText && ctaLink && (
				<a href={ctaLink} class="hero__cta">
					{ctaText}
				</a>
			)
		}
	</div>
</section>

<script>
	import { initTextAnimations } from "../../scripts/text-animations";

	// Initialize text animations
	initTextAnimations();
</script>

<style>
	.hero {
		position: relative;
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		padding: 2rem;
		/* Dark background - neural network renders on top */
		background: var(--color-background);
		/* Remove any default borders/outlines */
		border: none;
		outline: none;
	}

	.hero__content {
		position: relative;
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
	}

	.hero__headline {
		font-size: clamp(2rem, 5vw, 4rem);
		font-weight: 700;
		color: #ffffff;
		margin-bottom: 1rem;
		line-height: 1.2;
		text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
	}

	.hero__subheadline {
		font-size: clamp(1rem, 2.5vw, 1.5rem);
		color: #ffffff;
		opacity: 0.9;
		margin-bottom: 2rem;
		line-height: 1.5;
		text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
	}

	.hero__cta {
		display: inline-block;
		padding: 1rem 2rem;
		font-size: 1.125rem;
		font-weight: 600;
		color: #1e1e2e;
		background: var(--color-primary);
		border-radius: 8px;
		text-decoration: none;
		transition:
			background-color 0.3s ease,
			transform 0.3s ease;
		will-change: transform;
		box-shadow: 0 4px 12px rgba(203, 166, 247, 0.3);
	}

	@media (hover: hover) {
		.hero__cta:hover {
			background: var(--color-secondary);
			transform: translateY(-2px);
		}
	}

	.hero__cta:focus-visible {
		outline: 2px solid var(--color-primary);
		outline-offset: 4px;
	}

	.hero__cta:active {
		transform: translateY(0);
	}
</style>
